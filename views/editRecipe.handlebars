<form>
    <div id="recipe_input" class="container">
        <div class="form-group row">
            <label for="input_title" class="col-sm-2 col-form-label  ">Title</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="input_title" value="{{recipe.title}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="input_cuisine" class="col-sm-2 col-form-label">Cuisine</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="input_cuisine" value="{{recipe.cuisine}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="input_description" class="col-sm-2 col-form-label ">Description</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="input_description" value="{{recipe.description}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="input_ingredients" class="col-sm-2 col-form-label">Ingredients</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="input_ingredients_list" value="{{recipe.ingredient_list}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="input_direction_list" class="col-sm-2 col-form-label">Directions</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="input_direction_list" value="{{recipe.direction_list}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="input_cook_time" class="col-sm-2 col-form-label">Cook Time</label>
            <div class="col-sm-8">
                <input type="number" class="form-control" id="input_cook_time" value="{{recipe.cook_time}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="input_yield" class="col-sm-2 col-form-label">Yield</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="input_yield" value="{{recipe.yield}}">
            </div>
        </div>
        
        <div class="form-group row">
            <label for="input_img" class="col-sm-2 col-form-label">Choose Image</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="input_img" value="{{recipe.image_filename}}">
            </div>
        </div>


