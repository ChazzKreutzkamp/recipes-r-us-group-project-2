<form id="testForm">
    <div id="recipe_input" class="container">
        <div class="form-group row">
            <label for="input_title" class="col-sm-2 col-form-label  ">Title</label>

            <input type="text" class="form-control col-sm-8" id="input_title" value="{{recipe.title}}">

        </div>
        <div class="form-group row">
            <label for="input_cuisine" class="col-sm-2 col-form-label">Cuisine</label>

            <input type="text" class="form-control col-sm-8" id="input_cuisine" value="{{recipe.cuisine}}">

        </div>
        <div class="form-group row">
            <label for="input_description" class="col-sm-2 col-form-label ">Description</label>
            <textarea class="form-control col-sm-8" id="input_description" rows="2"
                value="{{recipe.description}}"></textarea>
        </div>

        <div class="form-group row">
            <label for="input_ingredients" class="col-sm-2 col-form-label ">Ingredients</label>
            <textarea class="form-control col-sm-8" id="input_ingredients_list" rows="2"
                value="{{recipe.ingredients_list}}"></textarea>
        </div>
        <div class="form-group row">
            <label for="input_direction_list" class="col-sm-2 col-form-label ">Directions</label>
            <textarea class="form-control col-sm-8" id="input_direction_list" rows="2"
                value="{{recipe.directions}}"></textarea>
        </div>



        <div class="form-group row">
            <label for="input_cook_time" class="col-sm-2 col-form-label">Cook Time</label>
                <input type="number" class="form-control col-sm-8" id="input_cook_time" value="{{recipe.cook_time}}">
                <small class="form-text text-warning mx-auto">Please provide cooktime in minutes.</small>
        </div>
        <div class="form-group row">
            <label for="input_yield" class="col-sm-2 col-form-label">Yield</label>

            <input type="text" class="form-control col-sm-8" id="input_yield" value="{{recipe.yield}}">

        </div>
        <div class="form-group row">
            <label for="input_img" class="col-sm-2 col-form-label">Choose Image</label>
            <div class="col-sm-8">
                <input type="file" class="mt-sm-1" id="input_img" name="recipe_pic" value="{{recipe.image_filename}}">
                <small class="form-text text-warning mx-auto">Warning: there is currently no functionality for editing images.</small>
            </div>
        </div>


    </div>


    <div class="form-group row">
        <div class="col-sm-4 mx-auto">
            <button type="click" class="btn btn-outline-warning rounded-0 w-100" id="new_recipe_submit_button">Add
                Recipe</button>
        </div>
    </div>
    </div>
</form>

