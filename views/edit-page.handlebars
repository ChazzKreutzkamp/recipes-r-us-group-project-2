<form>
    <div id="recipe_input" class="container">
        <div class="form-group row">
            <label for="input_title" class="col-sm-2 col-form-label  ">Title</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="title" value="{{recipe.title}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="input_cuisine" class="col-sm-2 col-form-label">Cuisine</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="cuisine" value="{{recipe.cuisine}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="input_description" class="col-sm-2 col-form-label ">Description</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="description" value="{{recipe.description}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="input_ingredients" class="col-sm-2 col-form-label">Ingredients</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="ingredients_list" value="{{recipe.ingredients_list}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="direction_list" class="col-sm-2 col-form-label">Directions</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="directions_list" value="{{recipe.directions}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="input_cook_time" class="col-sm-2 col-form-label">Cook Time</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="cook_time" value="{{recipe.cook_time}}">
            </div>
        </div>
        <div class="form-group row">
            <label for="input_yield" class="col-sm-2 col-form-label">Yield</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="yield" value="{{recipe.yield}}">
            </div>
        </div>
        <div class="input-group mb-3">
            <label for="input_img" class="col-sm-2 col-form-label">Choose Image</label>
            <div class="custom-file">

                <input type="file" class="image_filename" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01"
                    value="{{recipe.img_filename}}">
                <label class="custom-file-label col-sm-9" for="inputGroupFile01">Choose Image</label>
            </div>
        </div>



        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-outline-warning rounded-0">Edit Recipe</button>
            </div>
        </div>
    </div>
</form>