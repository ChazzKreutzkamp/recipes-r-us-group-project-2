<section>
    <div id="main" class="container">
        <div class="row">
            <div class="col-sm-12">

                <div class="row">
                    <form class="login">
                        <div class="form-group">
                            <label for="email-login">Email address</label>
                            <input type="email" class="form-control rounded-0" id="email-login"
                                aria-describedby="emailHelp">
                            <small id="emailHelp" class="form-text">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class="form-group">
                            <label for="password-login">Password</label>
                            <input type="password" class="form-control rounded-0" id="password-login">
                        </div>
                        <button id="login-btn" type="click" class="btn btn-warning rounded-0">Submit</button>
                        <a href="/signup" class="sign-up">Not a Member? Sign up here!</a>
                    </form>
                    <div class="col-4 col-sm-5 featured rounded-0">

                        <img src="./pics/32066ff6-2abf-41ac-ac78-ba90a5355431.svg" alt="mid-century-artwork"
                            class="img-thumbnail">

                    </div>
                    {{#each recipe as |recipe|}}
                    <div class="col-1 col-sm-3 featured rounded-0">
                        <div class="card" style="width: 18rem;">
                            <img src="./assets/recipe_images/{{image_filename}}" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title"><a href="/recipepage/{{id}}">{{recipe.title}}</a>
                                </h5>
                                <p class="card-text">Description: {{description}}</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Cook time: {{cook_time}}</li>
                                <li class="list-group-item">Cuisine: {{cuisine}}</li>
                                <li class="list-group-item">Yield: {{yield}}</li>
                            </ul>

                        </div>


                    </div>
                    {{/each}}

                </div>
            </div>
        </div>
    </div>

</section>
<script src="/javascript/login.js"></script>