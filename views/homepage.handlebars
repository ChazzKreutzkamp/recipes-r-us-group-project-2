<div class="container">
    <div class="row">
        <div class="col-md-12  text-center " id="homepage-title">WELCOME TO YOUR HOMEPAGE
        </div>
    </div>
    <div class="row">
        <div class="col-md-12  text-center rounded-0"><button class="btn btn-warning rounded-0"><a href="/newrecipe">Add
                    a recipe</a></button>
        </div>
    </div>
    <div class="homepage-body">
        <div class="row">
            <div id="current-recipe" class=" col-md-6 border border-warning rounded-0 text-center pt-4">

                <h2>Your Recipes</h2>
                <div class="somethingunique">
                    {{#if recipe.length}}
                    {{#each recipe as |recipe|}}
                    {{> recipe-card recipe}}
                    {{/each}}
                    {{/if}}
                    {{#else}}
                    <h3>You haven't added any recipes yet</h3>
                    {{/else}}
                </div>

                <h2 class="invisible">heheheyoufoundme</h2>

            </div>
            <div class="liked-food col-md-6 border border-warning rounded-0 text-center pt-4">
                <h2>Liked Recipes</h2>
                <h3>Coming Soon...</h3>
            </div>
        </div>
    </div>
</div>
<script src="/javascript/delete-recipe.js"></script>
